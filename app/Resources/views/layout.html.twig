{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="{{ path('portada') }}"><img src="{{ asset('archivos_web/logo_w_300px.png') }}" alt="DevVideos" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Mostrar secciones">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            {% set ruta = app.request.get('_route') %}
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "categoria" %} active{% endif %}" href="{{ path('categorias_listar') }}">Categorias</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "archivo" %} active{% endif %}" href="{{ path('archivos_listar') }}">Archivos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "historial" %} active{% endif %}" href="{{ path('historiales_listar') }}">Historiales</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "guardado" %} active{% endif %}" href="{{ path('guardados_listar') }}">Guardados</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "suscripcion" %} active{% endif %}" href="{{ path('suscripciones_listar') }}">Suscripciones</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "usuario" %} active{% endif %}" href="{{ path('usuarios_listar') }}">Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link{% if ruta starts with "video" %} active{% endif %}" href="{{ path('videos_listar') }}">Videos</a>
                </li>
            </ul>
            {% if app.user %}
                <span class="navbar-text">Â¡Hola <a href="{{ path('datos_personales') }}">{{ app.user.name }}</a>!</span>
                <a href="{{ path('usuario_salir') }}" class="ml-3 btn btn-primary"><i class="fas fa-power-off"></i> Salir</a>
            {% else %}
                <a href="{{ path('usuario_entrar') }}" class="boton_layout btn btn-primary"><i class="fas fa-door-open"></i> Entrar</a>
                <a href="{{ path('usuario_nuevo') }}" class="boton_layout btn btn-success"><i class="fas fa-pen"></i> Registrarse</a>
            {% endif %}
        </div>
    </nav>
    <div class="container">
        {% for mensaje in app.session.flashbag.get('exito') %}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ mensaje }}
            </div>
        {% endfor %}
        {% for mensaje in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                {{ mensaje }}
            </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}