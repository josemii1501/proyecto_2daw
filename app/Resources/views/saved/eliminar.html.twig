{% extends 'layout.html.twig' %}

{% block title %}Eliminar Guardado{% endblock %}

{% block content %}
    <h1>Eliminar Guardado</h1>

    <div class="alert alert-danger">
        ¡Atención! Esta operación no se puede deshacer.
        ¿Desea realmente eliminar eliminar el video guardado {{ saved.id }}?
    </div>

    <form method="post">
        <a href="{{ path('guardado_modificar', {'id': saved.id}) }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver</a>
        <button type="submit" class="btn btn-danger" name="borrar"><i class="fas fa-trash"></i> Confirmar</button>
    </form>
{% endblock %}