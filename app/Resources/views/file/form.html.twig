    {% if not es_nueva %}<a href="{{ path('archivo_eliminar', {'id': archivo.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar Archivo</a>{% endif %}
    {{ form_end(form) }}

{% endblock %}