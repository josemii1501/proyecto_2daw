        <h1>Modificar Archivo</h1>
    {% else %}
        <h1>Nuevo Archivo</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <a href="{{ path('archivos_listar') }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver</a>
