{% extends 'layout.html.twig' %}

{% block title %}Eliminar Archivo{% endblock %}

{% block content %}
    <h1>Eliminar Archivo</h1>

    <div class="alert alert-danger">
        ¡Atención! Esta operación no se puede deshacer.
        ¿Desea realmente eliminar el archivo {{ archivo.id }}?
    </div>

    <form method="post">
        <a href="{{ path('archivo_editar', {'id': archivo.id}) }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver</a>
        <button type="submit" class="btn btn-danger" name="borrar"><i class="fas fa-trash"></i> Confirmar</button>
    </form>
{% endblock %}