{% extends 'layout.html.twig' %}

{% block title %} Eliminar Historial - DevVideos {% endblock %}

{% block content %}
    <h1>Eliminar Historial</h1>

    <div class="alert alert-danger">
        ¡Atención! Esta operación no se puede deshacer.
        ¿Desea realmente eliminar el Historial {{ historial.id }}?
    </div>

    <form method="post">
        <a href="{{ path('historial_modificar', {'id': historial.id}) }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver</a>
        <button type="submit" class="btn btn-danger" name="borrar"><i class="fas fa-trash"></i> Confirmar</button>
    </form>
{% endblock %}