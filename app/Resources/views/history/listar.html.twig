{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Listar Historial</h1>

    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>USUARIO</th>
            <th>VIDEO</th>
            <th>FECHA</th>
        </tr>
        </thead>
        <tbody>
        {% for historial in historiales %}
            <tr>
                <td>{{ historial.id }}</td>
                <td>{{ historial.user }}</td>
                <td>{{ historial.video }}</td>
                <td>{{ historial.timestamp | date('H:m:s | d/m/Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}