{% extends 'layout.html.twig' %}

{% block title %}
    {% if not es_nueva %}
        Modificar Categoría - DevVideos
    {% else %}
        Nueva Categoría - DevVideos
    {% endif %}
{% endblock %}

{% block content %}
    {% if not es_nueva %}
        <h1>Modificar Categoría</h1>
    {% else %}
        <h1>Nueva Categoría</h1>
    {% endif %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <a href="{{ path('categorias_listar') }}" class="btn btn-info"><i class="fas fa-arrow-left"></i> Volver</a>
    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i> Guardar Cambios</button>
    {% if not es_nueva %}<a href="{{ path('categoria_eliminar', {'id': categoria.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i> Eliminar Categoría</a>{% endif %}
    {{ form_end(form) }}

{% endblock %}