{% extends 'layout.html.twig' %}

{% block title %} Categorías - DevVideos{% endblock %}

{% block content %}

    <h1 class="titulo_seccion">Categorías </h1>


        {% if is_granted('ROLE_ADMIN') %}
            <div class="pnlAccionNueva">
                <a href="{{ path('categoria_nueva') }}" class="btn btn-success"><i class="fas fa-plus"></i> Añadir</a>
                <span class="ayuda"> Crea una nueva categoría para que tus publicadores puedan asignarla a sus videos.</span>
            </div>
        {% endif %}


    <div class="panel_categorias">
    {% for categoria in categorias %}
        <div class="panel_categoria">
            {% if is_granted('ROLE_ADMIN') %}
                <div class="editar_categoria">
                    <a href="{{ path('categoria_modificar', {'id': categoria.id}) }}" class="btn btn-warning"><i class="fas fa-tools"></i></a>
                </div>
            {% endif %}
            <a href="{{ path('videos_categoria',{'id': categoria.id}) }}" class="enlace_categoria">
                <div class="imagen_categoria">
                    <img src="{{ asset(ruta_categoria~categoria.photo) }}" alt="Foto {{ categoria.name }}" class="categoria_imagen"/>
                </div>
                <div class="descripcion_categoria">
                    <span class="nombre_categoria">{{ categoria.name }}</span>
                </div>
            </a>
        </div>
    {% endfor %}
    </div>

{% endblock %}